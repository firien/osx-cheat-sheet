!!! 5
%html
  %head
    :scss
      dd {
        display: inline-block;
        margin: 0.5em 0.25em;
        border: 1px solid #AAA;
        border-radius: 0.2em;
        box-shadow: 1px 2px 2px #DDD;
        background-color: #F9F9F9;
        background-image: -moz-linear-gradient(top, #EEE, #F9F9F9, #EEE);
        background-image: -ms-linear-gradient(top, #EEE, #F9F9F9, #EEE);
        background-image: -webkit-linear-gradient(top, #EEE, #F9F9F9, #EEE);
        background-image: linear-gradient(top, #EEE, #F9F9F9, #EEE);
        padding: 0.3em 0.4em;
        font-size: 1.15em;
        //width:1em;
        height:1em;
        line-height:1em;
        text-align: center;
      }
      dt {
        font-family:Helvetica;
      }
      kbd {
        font-family: Monaco;
        text-transform:uppercase;
        &.arrow {
          font-family: sans-serif;
        }
        &.shift::after {
          content: '⇧';
        }
        &.command::after {
          content: '⌘';
        }
        &.control::after {
          content: '⌃';
        }
        &.option::after {
          content: '⌥';
        }
        &.escape::after {
          content: '⎋';
        }
        &::before {
          content: '·';
          color: #aaa;
          font-family:Helvetica;
        }
        &:first-of-type::before {
          content: '';
        }
      }
      dd:hover {
        kbd::after {
          text-transform: uppercase;
          font-variant: small-caps;
          font-size: 0.8em;
          color:#555;
        }
        kbd.shift::after {
          content: 'shift';
        }
        kbd.command::after {
          content: 'command';
        }
        kbd.control::after {
          content: 'control';
        }
        kbd.option::after {
          content: 'option';
        }
        kbd.escape::after {
          content: 'escape';
        }
      }
